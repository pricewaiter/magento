<phpunit bootstrap="tests/bootstrap.php">
    <testsuites>
        <testsuite name="all">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>app</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="build/html" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70" />
        <log type="coverage-clover" target="build/logs/clover.xml" />
    </logging>
</phpunit>
